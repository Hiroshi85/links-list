<div class="container-fluid p-4">
    <div class="row">
        {{#each links}}
            <div class="col-sm-6 col-md-4">
                <div class="card text-center mb-2">
                    <div class="card-body">
                        <a href="{{this.url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{this.title}}
                            </h3>
                        </a>
                        <p class="m-2">{{this.description}}</p>
                        <p>{{timeago this.created_at}}</p>
                        <a href="/links/delete/{{this.id}}?csrf={{this.csrf}}" class="btn btn-danger">Delete Link</a>
                        <a href="/links/edit/{{this.id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-sm-8 col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no links saved yet</p>
                    <a href="/links/add" class="btn btn-primary">Create One</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>