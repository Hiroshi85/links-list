<div class="container p-4">
    <div class="row">
        <div class="col-md-8 col-lg-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                    <input type="hidden" name="csrf_token" value={{csrf_token}}>

                    <div class="mb-3">
                        <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                    </div>

                    <div class="mb-3">
                        <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="URL">
                    </div>

                    <div class="mb-3">
                        <textarea class="form-control" name="description" placeholder="Description" rows="2">{{link.description}}</textarea>
                    </div>
                    <div class="mb-3 d-flex justify-content-around">
                        <button class="btn btn-success">
                            Save
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>